<!DOCTYPE html>
<html >
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>CashID Sign-In</title>
    <style>
      @import url(https://fonts.googleapis.com/css?family=Roboto:400,100);
      
      body {
        font-family: 'Roboto', sans-serif;
        margin-top: 25px;
        margin-bottom: 25px;
      }
      
      .container {
        margin: auto;
        width: 480px;
        max-width: 100%;
        background: #eee;
        border-radius: 20px;
      }
      
      .login-card {
        padding: 40px;
        text-align: center;
      }
      
      .login-card h1 {
        margin-top: 0px;
        color: #00c58a;
      }
      
      .login-card img {
        width:100%;
        margin-bottom:1em;
      }
      
      .login-card a {
        display: block;
        width: 100%;
        text-decoration: none;
        background: #00c58a;
        padding: 20px 0 20px 0;
        border-radius: 10px;
        color: #fff;
        font-weight: bold;
        margin-bottom: 1em;
      }
      
      .login-card .msg {
        color: #00c58a;
        margin-bottom: 1em;
      }
      
      .login-card .msg.error {
        color: #00c58a;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="login-card">
        <h1>Sign-in with CashID</h1>
        
        <img id="cashid-qrcode" />
        
        <a href="<%= uri %>">Open Identity Manager</a>
        
        <div id="cashid-msg" class="msg"></div>
        
        <div style="color:#333; font-size:0.8em;"><%= disclaimer %></div>
      </div>
    </div>
    
    <!-- SSE Listener -->
    <script>
    var msgEl = document.getElementById('cashid-msg')
    
    if (window.EventSource) {
      var source = new EventSource('/api/events/<%= nonce %>')

      source.addEventListener('message', function(e) {
        console.log(e.data)
        let msg = JSON.parse(e.data)
        msgEl.innerText = msg.message
        if (msg.code === 0) {
          window.location = '/oidc/interaction/<%- uid %>/complete'
        } else {
          msgEl.classList.add('error')
        }
      }, false)

      source.addEventListener('open', function(e) {
        console.log("Connection was opened")
      }, false)

      source.addEventListener('error', function(e) {
        if (e.readyState == EventSource.CLOSED) {
          console.log("Connection was closed")
        }
      }, false)
    }
    </script>

    <!-- QR Code -->
    <script src="/js/qrcode.min.js"></script>
    <script>
      var qrCodeEl = document.getElementById('cashid-qrcode')
      QRCode.toDataURL(`<%- uri %>`, function (err, url) {
        qrCodeEl.src = url
      })
    </script>
  </body>
</html>
